<%= cat_rental_request.errors.full_messages.join(", ") %><br>

<label for="cat_rental_request_cat_id">Cat ID</label>
<select id="cat_rental_request_cat_id" name="cat_rental_request[cat_id]">
<option></option>
<% Cat.all.each do |cat| %>
  <option <%= "selected" if cat_rental_request.cat_id == cat.id %>
          value = "<%= cat.id %>">
    <%= "#{cat.id}: #{cat.name}" %>
  </option>
<% end %>
</select>

<label for="cat_rental_request_start_date">Start Date</label>
<input id="cat_rental_request_start_date" type="date"
       name="cat_rental_request[start_date]"
       value="<%= unless cat_rental_request.start_date.nil?
                    cat_rental_request.start_date.to_formatted_s(:db)
                  end %>">

<label for="cat_rental_request_end_date">End Date</label>
<input id="cat_rental_request_end_date" type="date"
       name="cat_rental_request[end_date]"
       value="<%= unless cat_rental_request.end_date.nil?
                    cat_rental_request.end_date.to_formatted_s(:db)
                  end %>">

<h1>Log In</h1>

<%= render 'shared/errors' %>

<form method="post" action="<%= session_url %>">
  <%= form_auth_token%>

  <label for="user_username">Username</label>
  <input
    id="user_username"
    type="text"
    name="user[username]"
    value="<%= @username %>">

  <label for="user_password">Password</label>
  <input
    id="user_password"
    type="password"
    name="user[password]">

  <button>Submit!</button>
</form>

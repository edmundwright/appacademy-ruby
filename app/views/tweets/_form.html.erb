<h2>New Tweet!</h2>
<form data-tweets-location="#feed" action="/tweets" method="POST" class="tweet-compose">
  <input
      type="hidden"
      name="authenticity_token"
      value="<%= form_authenticity_token %>">

  <label>
    Content
    <textarea name="tweet[content]"></textarea>
  </label>
  <strong class="chars-left">
  </strong>
  <br>

  <label>
    Mention
    <a class="add-mentioned-user"
       href="javascript:void(0)">Add mention</a>
    <div class="mentioned-users"></div>

    <script type="text/template">
      <div>
        <select name="tweet[mentioned_user_ids][]">
          <option></option>
          <% User.all.each do |user| %>
            <option value="<%= user.id %>"><%= user.username %></option>
          <% end %>
        </select>
        <a class="remove-mentioned-user" href="javascript:void(0)">Remove mention</a>
      </div>
    </script>
  </label>
  <br>

  <input type="Submit" value="Post Tweet!">
</form>

<script>
  $(".tweet-compose").tweetCompose();
</script>
